<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projectm.Welcome"
             Title="Welcome, BNXT League App"
             >
    <ContentPage.Resources>
        <ResourceDictionary>
            <LinearGradientBrush x:Key="PageBackground" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Offset="0" Color="MediumPurple" />
                <GradientStop Offset="1" Color="deepPink" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid Background="{StaticResource PageBackground}">
            <VerticalStackLayout >
                <Label 
                    Text="Standings and Boxscores of BNXT League"
                    FontSize="Header"
                    HorizontalTextAlignment="Center"
                    />

                <Button 
                    Text="Welcome"
                    Clicked="Button_Clicked"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="Default"            
                    />
             </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>